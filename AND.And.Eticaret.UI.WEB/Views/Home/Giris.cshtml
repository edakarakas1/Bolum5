
@{
    ViewBag.Title = "Giris";
}
<style>
    .left {
        width: 220px;
        float: left;
        margin:5px;
    }

    .left {
        width:150px;
        float: left;
    }
</style>

<h2>Pazarlamacı Giriş Sayfası</h2>
<br />
@{ 
    if (ViewBag.Error!=null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>

    }
}

<form action="/Pazarlamacı-Giris" method="post">
    <div class="left">
        @Html.Label("E Posta Adresiniz: ")
    </div>
    <div class="right"> @Html.TextBox("Email")</div>

    <div class="row"></div>

    <div class="left">
        @Html.Label("Kullanıcı Adınız:")
    </div>
    <div class="right">
        @Html.TextBox("KullanıcıAdı")
    </div>

    <div class="row"></div>

    <div class="left">
        @Html.Label("Şifreniz:")
    </div>
    <div class="right">
        @Html.Password("Password")
    </div>
    <div class="row"></div>

    <button type="submit">Giriş Yap</button>

</form>